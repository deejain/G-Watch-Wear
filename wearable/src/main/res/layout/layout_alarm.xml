<androidx.wear.widget.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/black_86p"
    android:padding="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        app:layout_boxedEdges="all">

        <TextView
            android:id="@+id/alarm_title"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="G-Watch"
            android:textStyle="normal"
            android:textSize="20sp"
            android:textAlignment="center"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/dark_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/alarm_text"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:text="High glucose!"
            android:textSize="18sp"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textColor="@color/red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/alarm_title"
            />

        <TextView
            android:id="@+id/bg_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="0dp"
            android:text="20.0"
            android:textSize="28sp"
            android:textStyle="normal"
            android:textAlignment="center"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/alarm_text" />

        <Button
            android:id="@+id/snooze_button"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            app:layout_constraintTop_toBottomOf="@id/bg_value"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/dismiss_button"
            android:text="zZ"
            android:textStyle="bold"
            android:textSize="22sp"
            android:fontFamily="sans-serif"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:textColor="@color/complicationDrawable_textColor"
            android:background="@drawable/alarm_button"
            />

        <Button
            android:id="@+id/dismiss_button"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            app:layout_constraintTop_toBottomOf="@id/bg_value"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/snooze_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="X"
            android:textStyle="bold"
            android:textSize="22sp"
            android:fontFamily="sans-serif"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:textColor="@color/complicationDrawable_textColor"
            android:background="@drawable/alarm_button"
            />
